<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Port Terminal Operations Dashboard</title>
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=IBM+Plex+Mono:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-primary: #0a0e1a;
            --bg-secondary: #141824;
            --bg-tertiary: #1a1f2e;
            --accent-primary: #00d4ff;
            --accent-secondary: #0099ff;
            --accent-success: #00ff88;
            --accent-warning: #ffaa00;
            --accent-danger: #ff3366;
            --text-primary: #e8eef5;
            --text-secondary: #8b95a8;
            --border-color: #2a3142;
            --green: #00ff88;
            --amber: #ffaa00;
            --red: #ff3366;
            --blue: #0099ff;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'IBM Plex Mono', monospace;
            background: linear-gradient(135deg, #0a0e1a 0%, #1a1f2e 100%);
            color: var(--text-primary);
            overflow-x: hidden;
        }
        
        .dashboard-container {
            min-height: 100vh;
            background: 
                radial-gradient(circle at 10% 20%, rgba(0, 212, 255, 0.03) 0%, transparent 50%),
                radial-gradient(circle at 90% 80%, rgba(0, 255, 136, 0.02) 0%, transparent 50%);
        }
        
        .global-controls {
            position: sticky;
            top: 0;
            z-index: 100;
            background: rgba(10, 14, 26, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 2px solid var(--accent-primary);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            box-shadow: 0 8px 32px rgba(0, 212, 255, 0.1);
        }
        
        .logo {
            font-family: 'Orbitron', monospace;
            font-size: 1.5rem;
            font-weight: 900;
            letter-spacing: 2px;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-success));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-transform: uppercase;
            animation: glow 3s ease-in-out infinite;
        }
        
        @keyframes glow {
            0%, 100% { filter: drop-shadow(0 0 8px rgba(0, 212, 255, 0.4)); }
            50% { filter: drop-shadow(0 0 16px rgba(0, 212, 255, 0.8)); }
        }
        
        .controls-group {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }
        
        .control-select {
            background: var(--bg-tertiary);
            border: 1px solid var(--border-color);
            color: var(--text-primary);
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .control-select:hover, .control-select:focus {
            border-color: var(--accent-primary);
            box-shadow: 0 0 12px rgba(0, 212, 255, 0.2);
            outline: none;
        }

        .control-select option {
            background: var(--bg-tertiary);
            color: var(--text-primary);
        }
        
        .executive-overview {
            position: sticky;
            top: 80px;
            z-index: 90;
            background: linear-gradient(135deg, rgba(20, 24, 36, 0.98), rgba(26, 31, 46, 0.98));
            backdrop-filter: blur(20px);
            padding: 1rem 2rem;
            border-bottom: 1px solid var(--border-color);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        
        .kpi-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 0.75rem;
        }
        
        .kpi-tile {
            background: var(--bg-tertiary);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 0.875rem;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .kpi-tile::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-primary), var(--accent-success));
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .kpi-tile:hover::before {
            transform: scaleX(1);
        }
        
        .kpi-tile:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 212, 255, 0.15);
        }
        
        .kpi-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--text-secondary);
            margin-bottom: 0.4rem;
        }
        
        .kpi-value {
            font-family: 'Orbitron', monospace;
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.4rem;
            background: linear-gradient(135deg, var(--text-primary), var(--accent-primary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .kpi-trend {
            display: flex;
            align-items: center;
            gap: 0.4rem;
            font-size: 0.8rem;
        }
        
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            animation: pulse 2s ease-in-out infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .status-green { background: var(--green); box-shadow: 0 0 12px var(--green); }
        .status-amber { background: var(--amber); box-shadow: 0 0 12px var(--amber); }
        .status-red { background: var(--red); box-shadow: 0 0 12px var(--red); }
        
        .dashboard-grid {
            padding: 2rem;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
        
        .dashboard-section {
            background: var(--bg-secondary);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }
        
        .dashboard-section:hover {
            border-color: var(--accent-primary);
            box-shadow: 0 8px 32px rgba(0, 212, 255, 0.1);
        }
        
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-color);
        }
        
        .section-title {
            font-family: 'Orbitron', monospace;
            font-size: 1.125rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: var(--accent-primary);
        }
        
        .section-kpis {
            display: flex;
            gap: 1.5rem;
            font-size: 0.875rem;
        }
        
        .section-kpi {
            display: flex;
            flex-direction: column;
        }
        
        .section-kpi-label {
            color: var(--text-secondary);
            font-size: 0.75rem;
            margin-bottom: 0.25rem;
        }
        
        .section-kpi-value {
            color: var(--text-primary);
            font-weight: 600;
        }
        
        .berth-gantt {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .berth-row {
            display: grid;
            grid-template-columns: 80px 1fr;
            gap: 1rem;
            align-items: center;
        }
        
        .berth-label {
            font-weight: 600;
            color: var(--text-secondary);
        }
        
        .berth-timeline {
            position: relative;
            height: 40px;
            background: var(--bg-tertiary);
            border-radius: 4px;
            overflow: hidden;
        }
        
        .vessel-block {
            position: absolute;
            height: 100%;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
            border-radius: 4px;
            display: flex;
            align-items: center;
            padding: 0 0.75rem;
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--bg-primary);
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .vessel-block:hover {
            transform: scaleY(1.1);
            box-shadow: 0 4px 16px rgba(0, 212, 255, 0.4);
            z-index: 10;
        }
        
        .crane-bar-chart {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        
        .crane-bar {
            display: grid;
            grid-template-columns: 50px 1fr 50px;
            gap: 1rem;
            align-items: center;
        }
        
        .crane-bar-label {
            font-weight: 600;
            color: var(--text-secondary);
        }
        
        .crane-bar-track {
            height: 24px;
            background: var(--bg-tertiary);
            border-radius: 4px;
            overflow: hidden;
            position: relative;
        }
        
        .crane-bar-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--accent-success), var(--accent-primary));
            border-radius: 4px;
            transition: width 0.6s ease;
            position: relative;
        }
        
        .crane-bar-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            animation: shimmer 2s infinite;
        }
        
        @keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }
        
        .crane-bar-value {
            font-weight: 700;
            color: var(--accent-primary);
            text-align: right;
        }
        
        .heatmap-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .heatmap-cell {
            aspect-ratio: 1;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid transparent;
        }
        
        .heatmap-cell:hover {
            transform: scale(1.1);
            border-color: var(--text-primary);
            z-index: 10;
        }
        
        .heatmap-low { background: linear-gradient(135deg, #00ff88, #00d4ff); color: var(--bg-primary); }
        .heatmap-medium { background: linear-gradient(135deg, #ffaa00, #ff8800); color: var(--bg-primary); }
        .heatmap-high { background: linear-gradient(135deg, #ff3366, #cc0044); color: #fff; }
        
        .gauge-container {
            position: relative;
            width: 200px;
            height: 200px;
            margin: 1.5rem auto;
        }
        
        .gauge-svg {
            transform: rotate(-90deg);
        }
        
        .gauge-value {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
        
        .gauge-number {
            font-family: 'Orbitron', monospace;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--accent-primary);
        }
        
        .gauge-label {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }
        
        .ai-insights {
            grid-column: 1 / -1;
            background: linear-gradient(135deg, rgba(0, 212, 255, 0.05), rgba(0, 255, 136, 0.05));
            border: 2px solid var(--accent-primary);
            border-radius: 12px;
            padding: 2rem;
        }
        
        .ai-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .ai-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-success));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            animation: rotate 10s linear infinite;
        }
        
        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        
        .ai-title {
            font-family: 'Orbitron', monospace;
            font-size: 1.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--accent-primary), var(--accent-success));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .prediction-card, .recommendation-card {
            background: var(--bg-tertiary);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 1.25rem;
            margin-bottom: 1rem;
            border-left: 4px solid var(--accent-warning);
            transition: all 0.3s ease;
        }
        
        .recommendation-card {
            border-left-color: var(--accent-primary);
        }
        
        .prediction-card:hover, .recommendation-card:hover {
            transform: translateX(8px);
            box-shadow: 0 8px 24px rgba(0, 212, 255, 0.2);
        }
        
        .recommendation-actions {
            display: flex;
            gap: 0.75rem;
            margin-top: 1rem;
        }
        
        .btn {
            padding: 0.5rem 1rem;
            border-radius: 4px;
            border: none;
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.875rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .btn-approve {
            background: var(--accent-success);
            color: var(--bg-primary);
        }
        
        .btn-approve:hover {
            background: var(--green);
            box-shadow: 0 4px 16px rgba(0, 255, 136, 0.4);
            transform: translateY(-2px);
        }
        
        .btn-dismiss {
            background: var(--bg-tertiary);
            color: var(--text-secondary);
            border: 1px solid var(--border-color);
        }
        
        .btn-dismiss:hover {
            border-color: var(--accent-danger);
            color: var(--accent-danger);
        }
        
        .btn-simulate {
            background: var(--accent-primary);
            color: var(--bg-primary);
        }
        
        .btn-simulate:hover {
            background: var(--blue);
            box-shadow: 0 4px 16px rgba(0, 212, 255, 0.4);
            transform: translateY(-2px);
        }
        
        .metric-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }
        
        .metric-item {
            background: var(--bg-tertiary);
            padding: 1rem;
            border-radius: 6px;
            border: 1px solid var(--border-color);
        }
        
        .role-selector {
            display: flex;
            gap: 0.5rem;
            margin-left: auto;
        }
        
        .role-btn {
            padding: 0.5rem 1rem;
            border-radius: 4px;
            border: 1px solid var(--border-color);
            background: var(--bg-tertiary);
            color: var(--text-secondary);
            font-family: 'JetBrains Mono', monospace;
            font-size: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .role-btn.active {
            background: var(--accent-primary);
            color: var(--bg-primary);
            border-color: var(--accent-primary);
            font-weight: 700;
        }
        
        .role-btn:hover:not(.active) {
            border-color: var(--accent-primary);
            color: var(--accent-primary);
        }

        .role-notification {
            background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 255, 136, 0.1));
            border: 1px solid var(--accent-primary);
            border-radius: 8px;
            padding: 1rem 2rem;
            margin: 2rem;
            text-align: center;
            animation: slideIn 0.5s ease;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .role-notification h3 {
            font-family: 'Orbitron', monospace;
            color: var(--accent-primary);
            margin-bottom: 0.5rem;
        }

        .filter-notification {
            background: rgba(0, 212, 255, 0.1);
            border: 1px solid var(--accent-primary);
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            margin: 1rem 2rem 0 2rem;
            text-align: center;
            font-size: 0.875rem;
            animation: slideIn 0.5s ease;
        }

        .full-width {
            grid-column: 1 / -1;
        }
        
        @media (max-width: 1200px) {
            .dashboard-grid {
                grid-template-columns: 1fr;
            }
            
            .kpi-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        
        @media (max-width: 768px) {
            .kpi-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .controls-group {
                width: 100%;
            }
            
            .role-selector {
                width: 100%;
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div id="root"></div>
    
    <script type="text/babel">
        const { useState, useEffect } = React;
        
        // Simulated data by terminal
        const terminalData = {
            'Terminal A': {
                vessels: [
                    { berth: 'Berth 1', name: 'Vessel A', start: '20%', width: '35%', type: 'Import' },
                    { berth: 'Berth 2', name: 'Vessel B', start: '40%', width: '55%', type: 'Export' },
                    { berth: 'Berth 3', name: 'Vessel C', start: '10%', width: '80%', type: 'Import' },
                    { berth: 'Berth 4', name: 'Vessel D', start: '50%', width: '30%', type: 'Transship' }
                ],
                cranes: [
                    { id: 'QC1', moves: 32, max: 40 },
                    { id: 'QC2', moves: 28, max: 40 },
                    { id: 'QC3', moves: 35, max: 40 },
                    { id: 'QC4', moves: 18, max: 40, status: 'Down' },
                    { id: 'QC5', moves: 30, max: 40 },
                    { id: 'QC6', moves: 27, max: 40 }
                ],
                teus: 2847
            },
            'Terminal B': {
                vessels: [
                    { berth: 'Berth 1', name: 'Maersk Edmonton', start: '15%', width: '45%', type: 'Export' },
                    { berth: 'Berth 2', name: 'COSCO Harmony', start: '35%', width: '50%', type: 'Import' },
                    { berth: 'Berth 3', name: 'MSC Aurora', start: '25%', width: '60%', type: 'Transship' }
                ],
                cranes: [
                    { id: 'QC1', moves: 29, max: 40 },
                    { id: 'QC2', moves: 31, max: 40 },
                    { id: 'QC3', moves: 26, max: 40 },
                    { id: 'QC4', moves: 33, max: 40 }
                ],
                teus: 1923
            },
            'Terminal C': {
                vessels: [
                    { berth: 'Berth 1', name: 'Evergreen Jade', start: '30%', width: '40%', type: 'Import' },
                    { berth: 'Berth 2', name: 'CMA CGM Titan', start: '10%', width: '70%', type: 'Export' }
                ],
                cranes: [
                    { id: 'QC1', moves: 34, max: 40 },
                    { id: 'QC2', moves: 30, max: 40 },
                    { id: 'QC3', moves: 28, max: 40 }
                ],
                teus: 1456
            }
        };

        // Time range affects KPI trends
        const timeRangeMultipliers = {
            'Last 24h': { vtt: 18.3, crane: 28.4, yard: 3.2, truck: 38, cost: 142, co2: 12.3 },
            'Last 7 days': { vtt: 19.1, crane: 27.8, yard: 3.5, truck: 41, cost: 145, co2: 12.8 },
            'Last 30 days': { vtt: 20.5, crane: 26.2, yard: 4.1, truck: 45, cost: 150, co2: 13.5 }
        };
        
        const Dashboard = () => {
            const [terminal, setTerminal] = useState('Terminal A');
            const [berth, setBerth] = useState('All Berths');
            const [timeRange, setTimeRange] = useState('Last 24h');
            const [operationType, setOperationType] = useState('All Operations');
            const [role, setRole] = useState('manager');
            
            // Get filtered data based on selections
            const getFilteredVessels = () => {
                let vessels = terminalData[terminal].vessels;
                
                // Filter by berth
                if (berth !== 'All Berths') {
                    vessels = vessels.filter(v => v.berth === berth);
                }
                
                // Filter by operation type
                if (operationType !== 'All Operations') {
                    vessels = vessels.filter(v => v.type === operationType);
                }
                
                return vessels;
            };

            const getFilteredCranes = () => {
                return terminalData[terminal].cranes;
            };

            const getCurrentKPIs = () => {
                const metrics = timeRangeMultipliers[timeRange];
                return [
                    { label: 'Vessel Turnaround Time', value: `${metrics.vtt}h`, trend: '‚Üì 2.1h', status: 'green' },
                    { label: 'Crane Productivity', value: `${metrics.crane}`, trend: '‚Üë 1.2/h', status: 'green' },
                    { label: 'Yard Dwell Time', value: `${metrics.yard}d`, trend: '‚Üë 0.3d', status: metrics.yard > 4 ? 'red' : metrics.yard > 3 ? 'amber' : 'green' },
                    { label: 'Truck TAT', value: `${metrics.truck}m`, trend: '‚Üì 4m', status: metrics.truck > 45 ? 'red' : metrics.truck > 40 ? 'amber' : 'green' },
                    { label: 'Cost per TEU', value: `$${metrics.cost}`, trend: '‚Üë $8', status: metrics.cost > 150 ? 'red' : metrics.cost > 140 ? 'amber' : 'green' },
                    { label: 'CO‚ÇÇ per TEU', value: `${metrics.co2}kg`, trend: '‚Üì 1.2kg', status: 'green' }
                ];
            };

            const handleApprove = (id) => {
                alert(`‚úì Recommendation ${id} approved for ${terminal}!`);
            };
            
            const handleDismiss = (id) => {
                alert(`‚äó Recommendation ${id} dismissed.`);
            };
            
            const handleSimulate = (id) => {
                alert(`‚Üí Launching simulation for Recommendation ${id} at ${terminal}...`);
            };

            const getFilteredKPIs = () => {
                const kpis = getCurrentKPIs();
                if (role === 'executive') {
                    return kpis.filter(kpi => 
                        kpi.label.includes('Cost') || 
                        kpi.label.includes('CO‚ÇÇ') || 
                        kpi.label.includes('Vessel Turnaround')
                    );
                } else if (role === 'supervisor') {
                    return kpis.filter(kpi => 
                        kpi.label.includes('Crane') || 
                        kpi.label.includes('Truck') || 
                        kpi.label.includes('Yard')
                    );
                }
                return kpis;
            };

            const shouldShowSection = (sectionName) => {
                if (role === 'executive') {
                    return ['financial', 'sustainability', 'predictions'].includes(sectionName);
                } else if (role === 'supervisor') {
                    return ['vessels', 'cranes', 'yard', 'gate', 'labor'].includes(sectionName);
                }
                return true;
